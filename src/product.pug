extends index
include components/article-product/article-product
include components/product-promo/product-promo
include components/nav-page/nav-page
include components/section-product/section-product
include components/content/content
include components/content-info/content-info
include components/content-spoiler/content-spoiler
include components/products/products
include components/slider-promo/slider-promo
