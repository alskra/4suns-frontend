include ../content/content
include ../time/time
include ../button/button

mixin section-main({breadcrumb, title} = {})
	+b.SECTION.section-main&attributes(attributes)
		+e.HEADER.header
			if attributes.class && attributes.class.indexOf('--header-bg') !== -1
				+e.header-bg

			+e.container--header
				if breadcrumb
					+e.NAV.breadcrumb
						each item in breadcrumb
							+e.breadcrumb-item
								+e.A.breadcrumb-link(href=`${baseDir}${item[1]}`) #{item[0]}

				+e.H1.title #{title}

		block
